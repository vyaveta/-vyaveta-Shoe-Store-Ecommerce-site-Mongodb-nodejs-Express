  
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
 <link rel="stylesheet" href="/stylesheets/admin/profilePage.css">
  <div class="container">
    <div class="main">
        <div class="topbar">
            <a href="/admin/logout">logout</a>
            <a href="/admin/">back to dashboard</a>
        </div>
        <div class="row">
            <div class="col-md-4 mt-1">
                <div class="card text-center sidebar">
                    <div class="card__body">
                   <center>  <img src='/images/home-session.jpeg' alt='image here' width="150px" height="150px"/></center>   
                        <div class="mt-3">
                             <center><h3>{{admin__details.name}}</h3></center> 
                             <button class = 'the__button mb-4'>Edit Profile</button><br>
                             <button class="the__button" id="dark" > dark mode</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 mt-1">
                <div class="card mb-3 content">
                    <h1 class="m-3 pt-3">Shoe Store</h1>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md3">
                                <h4>Admin Id</h4>
                            </div>
                            <div class="col-md-9 text-secondary">
                                {{admin__details._id}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>email</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                {{admin__details.email}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>phone</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                454574545445
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>address</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                cherthala
                                alappuzha
                                kerala
                                india
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
            <div class="card mb-3 content actions">
                <div class="row">
                    <div class="col-md-6 col-lg-6">
                        <h1 class="m-3">Recent Actions</h1>
                        <h3>{{admin__msg}}</h3>
                    </div>
                   <div class="col-md-3">
                     <a href=""><button class="my-4 the__button">Clear Action History</button></a>
                   </div>
                </div>
            </div>
            <div class="card-body">
                {{#each actions}}
                <div class="row ">
                    <div class="col-md-3">
                        <h5>{{this.action}}</h5>
                    </div>
                    <div class="col-md-6 ">
                        {{this.details}} on {{this.date}}
                    </div>
                    <div class="col-md-3">
                        <a href="/admin/undoUserDeletion/{{this.deletedAccountId}}"><button class="the__button">undo</button></a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
  </div>
  <script src="/javascripts/darkMode.js"></script>
  <!-- JavaScript Bundle with Popper -->
