                        <li>
                           <i class="fa fa-heart"></i>
                            <span>Add to WishList
                            </span>
                        </li>
                        <li>
                            <i class="fa fa-shopping-cart"></i>
                            <span>Add to Cart</span>
                        </li>
                        <li>
                            <i class="fa fa-eye"></i>
                            <span>View Product</span>
                        </li>
                    </ul>
                </div>
                <div class="content">
                    <div class="product__name">
                        <h3>{{this.model}}</h3>
                    </div>
                    <div class="price__rating">
                        <h2>{{this.price}}</h2>
                        <div class="rating">
