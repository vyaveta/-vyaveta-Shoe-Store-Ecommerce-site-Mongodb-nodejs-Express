<style>
    body{
        margin:0;
        padding:0;
    }
    .the__cover{
     display: flex;
     flex-direction: column;
     justify-content:center;
     font-family: 'Work Sans', sans-serif;
     padding: 20px !important;
    }
    .the__rectangle{
    margin-top: 20px;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    padding: 20px;
    height: 35vh;
    border-radius: 15px;
    color:white;
    background-color: green;
    border: 2px solid white;
    /* box-shadow:2px 2px 1px .5px rgba(255, 255, 255, 0.624),-2px -2px 1px .5px rgba(255, 255, 255, 0.9); */
}
.left{
    display: flex;
    flex-direction: column;
    padding: 10px;
}
.right{
    display: flex;
    flex-direction: row;
    padding: 10px;
    position: relative;
}
.total__amount,
.status{
    margin:10px 20px 10px;
}
.view__products{
    position: absolute;
    
    /* left: 25px; */
    bottom: 0;
}
.view__products button{
    border: none;
    color: #5cdb95;
    background-color: white;
    padding: 10px 15px;
    border-radius: 20px;
    font-weight: 700;
    cursor: pointer;
    transition: .15s;
}
.view__products button:hover{
    color: white;
    background-color: #5cdb95;
    transition: .15s;
    box-shadow: 2px 2px 5px .5px rgba(255, 255, 255, 0.624),-2px -2px 5px .5px rgba(255, 255, 255, 0.9);
}
.view__products .cancel:hover{
    background-color: red;
    color: white;
}
@media screen and (max-width:1000px){
    
    .the__rectangle{
        flex-direction: column;
        height: 45vh;
    }
    .the__cover h3{
        margin: 0;
    }
    .view__products {
        align-self: center;
        position: relative;
        margin:0px auto 0px;
        font-size: 15px;
    }
     .view__products button{
        margin-top: 10px;
        padding: 5px 10px;
    }

}
@media screen and (max-width:560px){
    .the__cover{
        padding: 0 !important;
    }
    body{
        background-color: white;
    }
    .the__rectangle{
        padding: 0;
        height: 45vh;
    }
    .the__rectangle .left .date h3,
    .the__rectangle .left .address h3{
        font-size: 16px;
    }
   
    .view__products{
       position: relative;
       bottom: 0;
       font-size: 15px;
    }
    .view__products button{
        margin-top: 10px;
        padding: 5px 10px;
    }
   
    hr{
        display: none;
    }
    /* .the__rectangle > div{
        display: inline-flex;
  flex-wrap: wrap;
  gap: 12px;
    } */
}
@media screen and (min-width:800px){
    .the__cover{
        padding: 0;
    }
    body{
        background-color: whitesmoke;
    }
}
</style>      
    <div class="the__cover">
        {{#each orders}}
        <div class="the__rectangle">
            <div class="left">
                <div class="date">
                    <h3>Date : {{this.date}}</h3>
                </div>
                <div class="address">
                    <h3> Address :{{this.delivery__details.address}} </h3>
                </div>
            </div>
            <hr>
            <div class="right">
                <div class="total__amount">
                    <h3>Total Amount</h3>
                    <span> Rs. {{this.total__amount}} </span>
                </div>
                <div class="status">
                    <h3>Status</h3>
                    <span>{{this.status}}</span>
                </div>
                <div class="view__products">
                    <button class="the__button" onclick="window.location.href='/users/view__ordered__products/{{this._id}}'">View Products</button>
                   {{#if this.cancelled}}
                   {{else}}
                         <button onclick="window.location.href='/users/deleteOrder/{{this._id}}'" class="the__button cancel">Cancel Order</button>
                            {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>